targets:
  default:
    filesets: [rtl]
  
  lint:
    default_tool: verilator
    filesets: [rtl]
    tools:
      verilator: 
        mode: lint-only
        verilator_options: [-Wwarn-lint -Wwarn-style]
        verilator_options: [-Wno-WIDTH]
    toplevel: bsg_nonsynth_dramsim3
    parameters:
      - channel_addr_width_p=2
      - data_width_p=2
      - num_channels_p=4
      - num_columns_p=2
      - num_rows_p=2
      - num_ba_p=2
      - num_bg_p=2
      - num_ranks_p=2
      - address_mapping_p=2
      - size_in_bits_p=2

parameters:
  channel_addr_width_p:
    datatype : int
    default  : -1
