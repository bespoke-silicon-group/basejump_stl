{
    # Name of the toplevel module to test.
    "toplevel": "bsg_mesh_router",

    # List of python test modules.
    "test_modules": [ "test_bsg" ],

    # List of RTL files.
    "filelist": [ 
        "bsg_misc/bsg_defines.v",
        "bsg_misc/bsg_mux_one_hot.v",
        "bsg_misc/bsg_round_robin_arb.v",
        "bsg_noc/bsg_noc_pkg.v",
        "bsg_noc/bsg_mesh_router.v"
    ],

    # List of directories to search for include files.
    "include": [
        "bsg_misc/",
        "bsg_noc/"
    ],

    # Simulator compilation parameters
    "compile_args": [ "-Wno-fatal"],

    # Parameter sweeps. Each element in the psweep list is a new test run with
    # a different parameterization. The optional key "name" can be used to set
    # the name of the test run with the given parameterization. 
    "psweep": [
        { "name": "w3", "width_p": "3", "x_cord_width_p": "2", "y_cord_width_p": "2"}
    ]
}
